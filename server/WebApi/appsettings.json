{
  "Environment": "DEV",

  "ConnectionStrings": {
    "ConnectionString_DEV": "User Id=postgres; Password='postgres'; Host=localhost; Port=5432; Database=todo_ms_development"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.PostgreSQL" ], //Write logs to SQL Server
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "User Id=postgres; Password='postgres'; Host=localhost; Port=5432; Database=todo_ms_development",
          "sinkOptionsSection": {
            "tableName": "web_api_logs",
            "schemaName": "defalt",
            "autoCreateSqlTable": true //default is false
          },
          "restrictedToMinimumLevel": "Error",
          "columnOptionsSection": {
            "clusteredColumnstoreIndex": false,
            "primaryKeyColumnName": "Id",
            "removeStandardColumns": [ "MessageTemplate", "Properties", "LogEvent" ],
            "id": { "nonClusteredIndex": true },
            "timeStamp": {
              "columnName": "TimestampUtc",
              "convertToUtc": true
            }
          }
        }
      }
    ]
  }

}
